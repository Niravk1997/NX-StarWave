                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="90"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Style="{StaticResource Channel_Label_Style}" Content="RC 7"/>
