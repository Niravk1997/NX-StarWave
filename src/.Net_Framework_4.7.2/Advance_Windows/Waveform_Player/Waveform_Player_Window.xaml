                                    <SolidColorBrush x:Key="MahApps.Brushes.ToggleSwitch.FillOnPointerOver" Color="#00CE30"/>
                                </Style.Resources>
                            </Style>
                        </Grid.Resources>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <Label Content="SQLite Connection:"/>
                            <Rectangle Fill="{Binding SQLite_Databse_Connect_Status}" Height="12" Width="20"/>
                            <Rectangle Fill="{Binding SQLite_Databse_Read_Write_Status}" Height="12" Width="20" Margin="10,0,0,0"/>
                        </StackPanel>
                        <TextBox Grid.Row="1" Text="{Binding Waveform_Name}" Style="{StaticResource Name_TextBox_Style}"/>
                        <mah:ToggleSwitch Grid.Row="2" ContentDirection="RightToLeft" Style="{StaticResource ToggleSwitch_Style}" OnContent="Auto Save On" OffContent="Auto Save Off" IsOn="{Binding SQLite_AutoSave}"/>
                        <StackPanel Grid.Row="3" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="8,0,0,0">
                            <Button Style="{StaticResource Button_Style_1}" Background="#FF3393DF" Margin="0,0,0,0" Height="40" Width="40" Click="Read_Data_from_SQLite_Database_Click">
                                <Path Data="{StaticResource Load_ICON}" Width="20" Height="20" Margin="0,0,0,0" Fill="White" Stretch="Fill">
                                    <Path.LayoutTransform>
                                        <RotateTransform Angle="0"/>
                                    </Path.LayoutTransform>
                                </Path>
                            </Button>
                            <Button Style="{StaticResource Button_Style_1}" Background="#FF32CD32" Margin="20,0,20,0" Height="40" Width="40" Click="Save_Waveforms_From_Table_to_SQLite_DataBase_Queue_Click">
                                <Path Data="{StaticResource Save_ICON}" Width="20" Height="20" Margin="0,0,0,0" Fill="White" Stretch="Fill">
                                    <Path.LayoutTransform>
                                        <RotateTransform Angle="0"/>
                                    </Path.LayoutTransform>
                                </Path>
                            </Button>
                            <Button Style="{StaticResource Button_Style_1}" Background="#FFFF8C00" Margin="0,0,0,0" Height="40" Width="40" Click="Overwrite_Save_Waveforms_From_Table_to_SQLite_DataBase_Queue_Click">
                                <Path Data="{StaticResource Save_ICON}" Width="20" Height="20" Margin="0,0,0,0" Fill="White" Stretch="Fill">
                                    <Path.LayoutTransform>
                                        <RotateTransform Angle="0"/>
                                    </Path.LayoutTransform>
                                </Path>
                            </Button>
                        </StackPanel>
                    </Grid>
                    <Rectangle Grid.Column="3" Fill="LightGray"/>
                    <Grid Grid.Column="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.Resources>
                            <Style TargetType="Label">
                                <Setter Property="Padding" Value="0,0,0,0"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="0,0,0,0"/>
                            </Style>
                            <Style TargetType="Button" BasedOn="{StaticResource MahApps.Styles.Button.Flat}">
                                <Setter Property="Margin" Value="5,0,5,0"/>
                                <Setter Property="Padding" Value="0,0,0,0"/>
                                <Setter Property="Width" Value="40"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </Grid.Resources>
                        <Label Grid.Row="0" Content="CH Data (Selected):" Margin="2,0,0,0"/>
                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                            <Label Content="CH1:" Margin="2,0,0,0"/>
                            <Button Content="Copy" Click="CH1_Waveform_Copy_Click"/>
                            <Button Content="Save" Click="CH1_Waveform_Save_Click"/>
                        </StackPanel>
                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <Label Content="CH2:" Margin="2,0,0,0"/>
                            <Button Content="Copy" Click="CH2_Waveform_Copy_Click"/>
                            <Button Content="Save" Click="CH2_Waveform_Save_Click"/>
                        </StackPanel>
                        <StackPanel Grid.Row="3" Orientation="Horizontal">
                            <Label Content="CH3:" Margin="2,0,0,0"/>
                            <Button Content="Copy" Click="CH3_Waveform_Copy_Click"/>
                            <Button Content="Save" Click="CH3_Waveform_Save_Click"/>
                        </StackPanel>
                        <StackPanel Grid.Row="4" Orientation="Horizontal">
                            <Label Content="CH4:" Margin="2,0,0,0"/>
                            <Button Content="Copy" Click="CH4_Waveform_Copy_Click"/>
                            <Button Content="Save" Click="CH4_Waveform_Save_Click"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Output Log">
                <ScrollViewer Grid.Row="3" x:Name="Output_Log_Scroll" HorizontalScrollBarVisibility="Auto" Margin="5,0,5,0">
                    <TextBlock x:Name="Output_Log" FontSize="12"/>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</mah:MetroWindow>
