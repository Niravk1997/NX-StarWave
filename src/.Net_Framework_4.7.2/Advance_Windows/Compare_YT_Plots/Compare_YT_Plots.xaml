                </MenuItem.ToolTip>
                <MenuItem x:Name="Auto_Scroll" Header="Auto Scroll" IsCheckable="True" IsChecked="True" Click="Auto_Scroll_Click"/>
                <MenuItem Header="Auto Clear" IsCheckable="False" IsChecked="False">
                    <MenuItem x:Name="Auto_Clear_20" Header="20 Logs" IsCheckable="True" IsChecked="False" Click="Auto_Clear_20_Click"/>
                    <MenuItem x:Name="Auto_Clear_40" Header="40 Logs" IsCheckable="True" IsChecked="True" Click="Auto_Clear_40_Click"/>
                    <MenuItem x:Name="Auto_Clear_80" Header="80 Logs" IsCheckable="True" IsChecked="False" Click="Auto_Clear_80_Click"/>
                    <MenuItem x:Name="Auto_Clear_100" Header="100 Logs" IsCheckable="True" IsChecked="False" Click="Auto_Clear_100_Click"/>
                </MenuItem>
                <MenuItem x:Name="Save_Log" Header="Save Output Log" IsCheckable="False" IsChecked="False" Click="Save_Log_Click"/>
                <MenuItem x:Name="Clear_Log" Header="Clear Output Log" IsCheckable="False" IsChecked="False" Click="Clear_Log_Click"/>
            </MenuItem>
        </Menu>
        <ListBox Grid.Column="0" Grid.Row="1"
                 x:Name="Waveform_ListBox"
                 ItemsSource="{Binding Checked_ListBox_Plottable_Table, Mode=TwoWay}"
                 SelectedItem="{Binding Selected_Checked_ListBox_Plottable_Data, Mode=TwoWay}"
                 SelectionChanged="Waveform_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Column="0" IsChecked="{Binding IsChecked, Mode=TwoWay}" Checked="Waveform_Checked" Unchecked="Waveform_Unchecked"/>
                        <Label Grid.Column="1" Content="{Binding Name, Mode=TwoWay}"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <GridSplitter Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Grid Grid.Column="2" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <ScottPlot:WpfPlot Name="Graph" Grid.Row="0" AllowDrop="True" Drop="File_DargDrop_on_Graph"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.Resources>
                    <Style TargetType="TabControl" BasedOn="{StaticResource MahApps.Styles.TabControl}">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0,0,0,0"/>
                    </Style>
                    <Style TargetType="TabItem" BasedOn="{StaticResource MahApps.Styles.TabItem}">
                        <Setter Property="mah:HeaderedControlHelper.HeaderFontSize" Value="14"/>
                        <Setter Property="Padding" Value="4,0,4,0"/>
                    </Style>
                </Grid.Resources>
                <TabControl Grid.Row="2" Margin="2,2,2,2" SelectedIndex="{Binding Tab_Item_SelectedIndex}">
                    <TabItem Header="Config Waveform">
                        <Grid Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto" MinWidth="100"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto" MinWidth="100"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.Resources>
                                <Style x:Key="Label_Style" TargetType="Label" BasedOn="{StaticResource MahApps.Styles.Label}">
                                    <Setter Property="Padding" Value="0,0,0,0"/>
                                    <Setter Property="Margin" Value="0,0,0,0"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                </Style>
                                <Style x:Key="CH_Label_Style" TargetType="Label" BasedOn="{StaticResource MahApps.Styles.Label}">
                                    <Setter Property="Padding" Value="0,0,0,0"/>
                                    <Setter Property="Margin" Value="0,0,0,0"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                </Style>
                                <Style x:Key="Text_Box" TargetType="TextBox" BasedOn="{StaticResource MahApps.Styles.TextBox}">
                                    <Setter Property="MinHeight" Value="0"/>
                                    <Setter Property="Padding" Value="0,0,0,0"/>
                                    <Setter Property="Margin" Value="0,0,5,0"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                                <Style TargetType="Label" BasedOn="{StaticResource MahApps.Styles.Label}">
                                    <Setter Property="Padding" Value="0,0,0,0"/>
                                    <Setter Property="MinHeight" Value="0"/>
                                    <Setter Property="FontSize" Value="12"/>
                                </Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource MahApps.Styles.TextBox}">
                                    <Setter Property="Padding" Value="0,0,0,0"/>
                                    <Setter Property="Margin" Value="2,0,0,0"/>
                                    <Setter Property="MinHeight" Value="0"/>
                                    <Setter Property="FontSize" Value="12"/>
                                </Style>
                                <Style TargetType="ComboBox" BasedOn="{StaticResource MahApps.Styles.ComboBox}">
                                    <Setter Property="Padding" Value="0,0,0,0"/>
                                    <Setter Property="Margin" Value="0,0,0,0"/>
                                    <Setter Property="MinHeight" Value="0"/>
                                    <Setter Property="FontSize" Value="12"/>
                                </Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MahApps.Styles.Button.Flat}">
                                    <Setter Property="Padding" Value="0,0,0,0"/>
                                    <Setter Property="Width" Value="50"/>
                                    <Setter Property="Margin" Value="0,0,0,0"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </Grid.Resources>
                            <Label Grid.Column="0" Grid.Row="0" Content="CH Info: " Style="{StaticResource Label_Style}"/>
                            <Label Grid.Column="0" Grid.Row="1" Content="CH Color: " Style="{StaticResource Label_Style}"/>
                            <Label Grid.Column="0" Grid.Row="2" Content="Data Points: " Style="{StaticResource Label_Style}"/>

                            <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding Channel_Info, Mode=TwoWay}" Style="{StaticResource Text_Box}"/>
                            <colorpicker:PortableColorPicker Grid.Column="1" Grid.Row="1" SelectedColor="{Binding Waveform_Color, Mode=TwoWay}" HorizontalAlignment="Left" Margin="-1,0,0,0"/>
                            <Label Grid.Column="1" Grid.Row="2" Content="{Binding Data_Points}" Style="{StaticResource CH_Label_Style}"/>

                            <Label Grid.Column="2" Grid.Row="0" Content="Total Time: " Style="{StaticResource Label_Style}"/>
                            <Label Grid.Column="2" Grid.Row="1" Content="Start Time: " Style="{StaticResource Label_Style}"/>
                            <Label Grid.Column="2" Grid.Row="2" Content="Stop Time: " Style="{StaticResource Label_Style}"/>

                            <Label Grid.Column="3" Grid.Row="0" Content="{Binding Total_Time_SI_Units}" Style="{StaticResource CH_Label_Style}"/>
                            <Label Grid.Column="3" Grid.Row="1" Content="{Binding Start_Time_SI_Units}" Style="{StaticResource CH_Label_Style}"/>
                            <Label Grid.Column="3" Grid.Row="2" Content="{Binding Stop_Time_SI_Units}" Style="{StaticResource CH_Label_Style}"/>

                            <Label Grid.Column="4" Grid.Row="0" Content="Waveform: " Style="{StaticResource Label_Style}"/>
                            <Label Grid.Column="4" Grid.Row="1" Content="Waveform: " Style="{StaticResource Label_Style}"/>
                            <Label Grid.Column="4" Grid.Row="2" Content="Waveform: " Style="{StaticResource Label_Style}"/>

                            <Button Grid.Column="5" Grid.Row="0" Content="Update" Click="Update_Selected_Waveform_Click"/>
                            <Button Grid.Column="5" Grid.Row="1" Content="Copy" Click="Copy_Reference_Data_Clipboard_Click"/>
                            <Button Grid.Column="5" Grid.Row="2" Content="Save" Click="Save_Reference_Data_File_Click"/>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Insert Waveform">
                        <Grid Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.Resources>
                                <Style TargetType="Label" BasedOn="{StaticResource MahApps.Styles.Label}">
                                    <Setter Property="Padding" Value="0,0,0,0"/>
                                    <Setter Property="MinHeight" Value="0"/>
                                    <Setter Property="FontSize" Value="16"/>
                                </Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MahApps.Styles.Button.Flat}">
                                    <Setter Property="Padding" Value="0,0,0,0"/>
                                    <Setter Property="Width" Value="70"/>
                                    <Setter Property="Margin" Value="5,2,2,2"/>
                                    <Setter Property="FontSize" Value="12"/>
                                </Style>
                            </Grid.Resources>
                            <Label Grid.Column="0" Grid.Row="0" Content="Reference Waveform: " VerticalContentAlignment="Center" HorizontalContentAlignment="Right"/>
                            <Button Grid.Column="1" Grid.Row="0" Content="Paste" Click="Paste_Reference_Waveform_Click"/>
                            <Button Grid.Column="2" Grid.Row="0" Content="Load" Click="Load_Reference_Waveform_Click"/>

                            <Label Grid.Column="0" Grid.Row="1" Content="Waveform: " VerticalContentAlignment="Center" HorizontalContentAlignment="Right"/>
                            <Button Grid.Column="1" Grid.Row="1" Content="Load" Click="Load_Waveform_Click"/>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Output Log">
                        <ScrollViewer Grid.Row="3" x:Name="Output_Log_Scroll" HorizontalScrollBarVisibility="Auto" Margin="5,0,5,0">
                            <TextBlock x:Name="Output_Log" FontSize="12"/>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>
    </Grid>
</mah:MetroWindow>
