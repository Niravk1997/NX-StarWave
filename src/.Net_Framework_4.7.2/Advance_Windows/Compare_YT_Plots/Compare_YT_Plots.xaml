                    <MenuItem Header="Load" IsCheckable="False" Click="Load_Reference_Waveform_Click"/>
                    <MenuItem Header="Paste" IsCheckable="False" Click="Paste_Reference_Waveform_Click"/>
                </MenuItem>
                <MenuItem Header="Waveform">
